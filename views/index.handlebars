<div class="row affix-row">
    <div class="col-sm-12 affix-content">
        <div class="col-sm-9">
            <h1 class="page-title">Latest Fantasy Football News</h1>
            <h2><i>Click an article title to view and post comments</i></h2>
            {{#each articles}}
              <h3 class="article-title">{{this.title}}</h3>
              <a target="_blank" href="{{this.link}}"><button type="button" class="btn btn-info btn-lg">Read Article</button></a>
              <hr>
            {{/each}}
        </div>
        <div class="col-sm-3">
            <div class="well">
                <h4>Leave a comment</h4>
                <div class="input-group">
                    <input type="text" id="commentArea" class="form-control input-sm chat-input" placeholder="Write your message here..." />
                    <button id="makenew">Add Comment</button>
                </div>
                <hr data-brackets-id="12673">
                <div id="results"></div>
            </div>
        </div>
    </div>
</div>
